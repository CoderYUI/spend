{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "public": true,
  "rewrites": [
    { 
      "source": "/dashboard",
      "destination": "/dashboard.html"
    },
    { 
      "source": "/about",
      "destination": "/about.html"
    },
    { 
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "zeroConfig": true
      }
    }
  ]
}
